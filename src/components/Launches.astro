---
import CardLaunches from "./CardLaunches.astro";
import { getLatestLaunches } from "../services/space"

const lanzamientos = await getLatestLaunches()
---

<div class="grid gap-5 px-5 md:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4">
    {
        lanzamientos.map(({id, name, links, success, flight_number: flightNumber , details }) => 
        <CardLaunches 
            id={id}
            name={name}
            img={links.patch.small}
            success={success}
            flightNumber={flightNumber}
            details={details}
            
        />
        )
    }
</div>